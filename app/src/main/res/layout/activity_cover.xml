<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de portada con fondo y superposición oscura -->
    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/dark_overlay"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_background" />

    <!-- Contenido de la portada -->
    <RelativeLayout
        android:id="@+id/loginCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!-- Título: Iniciar sesión -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway_medium_italic"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/welcome"
            android:textColor="#FBFAFB"
            android:textSize="37sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Botón de inicio de sesión -->
    <Button
        android:id="@+id/cover_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginCover"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/neumorphism_button"
        android:fontFamily="@font/raleway_semi_bold_italic"
        android:text="@string/login_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAlignment="center"
        tools:ignore="VisualLintButtonSize" />

    <!-- Botón de registro -->
    <Button
        android:id="@+id/cover_signin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover_login_button"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/neumorphism_button"
        android:fontFamily="@font/raleway_semi_bold_italic"
        android:gravity="center"
        android:text="@string/signincover"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        tools:ignore="VisualLintButtonSize" />

</RelativeLayout>