<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE1EA">

    <!-- Imagen de portada con flecha para ir atrás -->
    <RelativeLayout
        android:id="@+id/loginCover"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_cover"
            android:alpha="0.9"
            android:visibility="visible"
            tools:visibility="visible" />

        <!-- Flecha para volver atrás -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- Título: Iniciar sesión -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/raleway_medium_italic"
            android:text="@string/login_title"
            android:textColor="#630573"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Resto del contenido del inicio de sesión -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/loginCover">

        <!-- Casillero de Correo Electrónico -->
        <TextView
            android:id="@+id/logmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/insert_mail"
            android:textColor="#630573"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logmail"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/neumorphism_edit_text"
            android:fontFamily="@font/raleway_light_italic"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#94630573"
            android:textColorHint="#94630573"
            android:textSize="16sp" />

        <!-- Título: Contraseña -->
        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEditText"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/password"
            android:textColor="#630573"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/neumorphism_edit_text"
            android:fontFamily="@font/raleway_bold_italic"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#94630573"
            android:textColorHint="#94630573"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/remember_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordEditText"
            android:orientation="horizontal">
        <!-- Cuadro para marcar "Recuérdame" -->
        <CheckBox
            android:id="@+id/rememberCheckBox"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="@string/remember_me"
            android:textColor="#630573"
            android:fontFamily="@font/raleway_medium"
            android:button="@drawable/neumorphism_checkbox" />

        <!-- Texto para "Olvidaste la contraseña?" -->
            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/forgot_password"
                android:textColor="#630573" />
        </LinearLayout>

        <!-- Botón de inicio de sesión -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remember_box"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/neumorphism_button"
            android:fontFamily="@font/raleway_semi_bold_italic"
            android:text="@string/login_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Botones de conexión con redes sociales -->
        <LinearLayout
            android:id="@+id/socialButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/googleButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1.5"
                android:layout_marginStart="50dp"
                android:contentDescription="@string/google"
                android:src="@drawable/google_icon" />

            <ImageView
                android:id="@+id/facebookButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1.5"
                android:layout_marginEnd="50dp"
                android:contentDescription="@string/facebook"
                android:src="@drawable/facebook_icon" />

        </LinearLayout>



        <View
            android:id="@+id/ui_bars_hom"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_icon" />


    </RelativeLayout>

</RelativeLayout>
