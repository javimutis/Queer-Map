<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_out</item>
    </style>

    <style name="DatePickerDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:colorAccent">@color/text_color</item>
    </style>

    <style name="GradientProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/gradient_progressbar</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/neumorphism_edit_text</item>
        <item name="android:popupBackground">@drawable/neumorphism_popup_background</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:fontFamily">@font/raleway_italic</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextHintNeuromorph" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/raleway_italic</item>
    </style>



</resources>


