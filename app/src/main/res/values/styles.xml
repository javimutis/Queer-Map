<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_out</item>
    </style>

    <style name="GradientProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/gradient_progressbar</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/neumorphism_edit_text</item>
        <item name="android:popupBackground">@drawable/neumorphism_popup_background</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:fontFamily">@font/raleway_italic</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextHintNeuromorph" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/raleway_italic</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_sp16</item>
        <item name="android:layout_marginStart">@dimen/margin_start_dp32</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color_selector</item>
        <item name="android:fontFamily">@font/raleway_light_italic</item>
        <item name="android:background">@drawable/neumorphism_edit_text</item>
    </style>


    <style name="ShapeAppearance.QueerMap.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.QueerMap.MaterialCalendar" parent="Widget.Material3.MaterialCalendar">
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnSurface">@color/title_color</item>
        <item name="colorOnSurfaceVariant">@color/text_color</item>

        <item name="colorPrimary">@color/title_color</item>
        <item name="colorOnPrimary">@color/button_text</item>

        <item name="colorOutline">@color/hint_color</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.QueerMap.Rounded</item>
    </style>

    <style name="ThemeOverlay.QueerMap.MaterialDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarStyle">@style/Widget.QueerMap.MaterialCalendar</item>
        <item name="colorSurface">@color/background_color</item>
        <item name="colorOnSurface">@color/title_color</item>
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorOnPrimary">@color/button_text</item>
        <item name="colorOutline">@color/hint_color</item>
        <item name="colorOnSurfaceVariant">@color/text_color</item>

    </style>

</resources>